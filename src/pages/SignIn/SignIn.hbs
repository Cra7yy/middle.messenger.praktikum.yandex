<div class="login">
    <form class="login__container">
        <h2 class="login__title">Вход</h2>
        <div class="login__block-inputs">
            <div class="login__block-input">
                <label class="login__label">Логин</label>
                <input class="login__input login__font" type="text" id="login" name="login"/>
            </div>
            <div class="login__block-input">
                <label class="login__label">Пароль</label>
                <input class="login__input login__font" type="password" id="password" name="password"/>
            </div>
        </div>
        <button class="login__button">Авторизоваться</button>
        <a href="/signup" class="login__link login__font">Нет аккаунта?</a>
    </form>
</div>